// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id Int @id @default(autoincrement())
  email String
  password String
  firstName String
  lastName String
  created_at DateTime @default(now())
  updating_at DateTime @updatedAt
  bookMark Bookmark[]
}

model Bookmark {
  id Int @id @default(autoincrement())
  title String
  description String
  link String
  userId Int
  user Users @relation(fields: [userId], references: [id])
  created_at DateTime @default(now())
  updating_at DateTime @updatedAt
}